@model IEnumerable<AssetManagement.Domain.Entities.Invoice>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_assetsms.cshtml";
}
<h2>Suppliers</h2>
<hr />
<h3 class="page-header">
    <i class="fa fa-file-text"></i>
    Suppliers
</h3>

<ol class="breadcrumb">
    <li><i class="fa fa-home"></i><a href="#">Home</a></li>
    <li><i class="fa fa-desktop"></i>Stock</li>
    <li><i class="fa fa-list-alt"></i>Invoices</li>
</ol>

<p>
    @Html.ActionLink("Add Invoice", "Create", null, new { @class = "btn btn-default" })
</p>

<table class="table table-striped table-condensed table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.InvoiceNumber)
        </th>
        <th>
            <p>Supplier</p>
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CaptureDate)
        </th>
        <th>
           
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.InvoiceNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Retailer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CaptureDate)
            </td>
            <td>
                @Html.ActionLink("View", "ViewInvoice", new { id = item.InvoiceId })
            </td>
        </tr>
    }

</table>
