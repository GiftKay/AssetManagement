@model PagedList.IPagedList<AssetManagement.Domain.Entities.OwnershipHistory>
@using PagedList;
@using PagedList.Mvc;


@{
    ViewBag.Title = "History";
    Layout = "~/Views/Shared/_assetsms.cshtml";
}

<div style="margin-bottom:10%;"></div>
       <h3 class="page-header"><i class="fa fa-list-alt"></i>Asset Ownership History</h3>

        <ol class="breadcrumb">
            <li><i class="fa fa-home"></i><a href="#">Home</a></li>
              <li><i class="fa fa-desktop"></i>Archive</li>
              <li><i class="fa fa-list-alt"></i>List</li>
           </ol>
          <hr />
<p style="float:right;">
    @Html.ActionLink("Disposed assets", "Disposed", null, new { @class = "btn btn-default" })
</p>

<div style="margin-bottom:2%;"></div>

<table class="table table-striped table-condensed table-bordered">
    <tr>
        <th>
            @Html.DisplayName("Asset Number")
        </th>
        <th>
            @Html.DisplayName("Category")
        </th>
        <th>
            @Html.DisplayName("Assignment Date")
        </th>
        <th>
            @Html.DisplayName("Dealocation Date")
        </th>
        <th>
            @Html.DisplayName("Prevous owner ID")
        </th>
        <th>
            @Html.DisplayName("Full Name")
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.assetNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.category)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.assignDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.delocateDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.employeeNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.employeeFullname)
            </td>
        </tr>
    }

</table>

<br />
<div style="text-align:center">
    <p>
        @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
    </p>
    <p style="margin-top: -25px">
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
    </p>
</div>