@model IEnumerable<AssetManagement.WebUI.ViewModel.Asset.AssetListViewModel>

@{
    ViewBag.Title = "Index";
}

<div style="margin-bottom:8%;"></div>

<h3>@ViewBag.Items Item(s) pending...</h3>

@if (@TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

    <p style="float:right;">
        @Html.ActionLink("Add asset", "Add", "Printer", null, new { @class = "btn btn-default" })   @Html.ActionLink("Assign asset", "Assign", "Asset", null, new { @class = "btn btn-default" })
    </p>
<div style="margin-bottom:2%;"></div>
<table class="table table-striped table-condensed table-bordered">
    <tr>
        <th>
            @Html.DisplayName("Asset Number")
        </th>
        <th>
            @Html.DisplayName("Serial Number")
        </th>
        <th>
            @Html.DisplayName("Catergory")
        </th>
        <th>
            @Html.DisplayName("Manufacturer")
        </th>
        <th>
            @Html.DisplayName("Date Added")
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.assetNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.serialNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.catergory)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.manufacturer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.dateadded)
            </td>
            <td>
                @Html.ActionLink("Return to stock", "Return", new { id = item.assetID })
            </td>
        </tr>
    }

</table>
