@model AssetManagement.Domain.Entities.Ticket

@{
    ViewBag.Title = "Escalate";
    Layout = "~/Views/Shared/_helpDesk.cshtml";
}

<link href="~/Content/customscripts/jquery-ui.css" rel="stylesheet" />
<script src="~/Content/customscripts/jquery-1.10.2.js"></script>
<script src="~/Content/customscripts/jquery-ui.js"></script>
<link rel="stylesheet" href="/resources/demos/style.css">

<script>
    $(function () {
        $("#datedue").datepicker();
    })
</script>

<div style="margin-bottom:10%;"></div>

<h2>Edit Problem</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @*<h4>Ticket</h4>*@
        <hr />
        @Html.ValidationSummary(true)
        @*@Html.HiddenFor(model => model.ticketid)*@


        <div class="form-group">
            @Html.LabelFor(model => model.subject, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @*<input type="text" name="subject" id="subject" required />*@
                @Html.EditorFor(model => model.subject)
                @Html.ValidationMessageFor(model => model.subject)
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-2 control-label">Priority</label>
            <div class="col-md-10">

                @{
                    List<SelectListItem> listItems = new List<SelectListItem>();
                    listItems.Add(new SelectListItem
                    {
                        Text = "Low",
                        Value = "Low"
                    });
                    listItems.Add(new SelectListItem
                    {
                        Text = "Medium",
                        Value = "Medium"
                    });
                    listItems.Add(new SelectListItem
                    {
                        Text = "High",
                        Value = "High"
                    });
                }
                @Html.DropDownListFor(model => model.priority, listItems, new { @class = "form-control" })
            </div>
        </div>

            <div class="form-group">
                @Html.LabelFor(model => model.description, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                @Html.TextAreaFor(model => model.description, new  { @class = "form-control", @rows = "4", @cols="8" })
                    @*<textarea name="description" id="description" cols="8" rows="4" class="form-control"></textarea>*@
                   @Html.ValidationMessageFor(model => model.description)</div>
            </div>



        <div class="form-group">
            @Html.LabelFor(model => model.datedue, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @*<input type="datetime" name="datedue" id="datedue" required />*@
                @Html.TextBoxFor(model => model.datedue)
                @Html.ValidationMessageFor(model => model.datedue)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
                    }

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

