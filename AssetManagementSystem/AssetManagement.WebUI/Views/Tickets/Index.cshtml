@model IEnumerable<AssetManagement.Domain.Entities.Ticket>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_assetsms1.cshtml";
}
<style>
    fieldset{
        padding-right: 20%;
        width: 90%;
        border: 2px 2px solid #000;
        background-color:white;
        border-radius:2px;
    }
    .link {
        text-decoration: none;
    }
    .tabs {
        padding-top: 2%;
        margin-left: 30%;    
    }
        .tabs span {
            display: inline-block;
            padding-right: 4px;
        }
        strong span{
            display: inline-block;
            padding-right: 6px;
        }
</style>
<div style="margin-bottom:10%;"></div>
<h2>Tickets</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@foreach (var i in Model)
{
    
    <div class="col-md-10">

        <h3>
        <strong>
            @if (i.acknowledgestatus == false) 
            { 
                
               <span> @Html.ActionLink(i.subject, "Details", "Tickets", new { id = i.ticketid }, new { @class = "link"})</span>
                <span><img src="~/Content/down.png" width="20" height="20" title="Waiting for aknowledgement..." /></span>
                
            }
            else
            {
                 <span> @Html.ActionLink(i.subject, "Details", "Tickets", new { id = i.ticketid }, new { @class = "link"})</span>
                <span><img src="~/Content/up.png" width="20" height="20" title="In progress..." /></span>
            }
        </strong>
        </h3>
    </div>
    <fieldset>
        
            <legend></legend>
            <div class="col-md-10">
                <p>
                    @Html.DisplayFor(item => i.description)

                    <div class="tabs">

                        <span>@Html.ActionLink("Asset details", "Report", "Asset", new { id = i.assetid }, new { @class = "link" }) | </span>
                        <span>@Html.ActionLink("Edit Problem", "EditProblem", "Tickets", new { id = i.ticketid }, new { @class = "link" }) | </span>
                        <span>@Html.ActionLink("Discard Ticket", "Discard", "Tickets", new { id = i.ticketid }, new { @class = "link" }) | </span>
                        <span>Created: @Html.DisplayFor(item => i.datecreated) | </span>
                        <span>Due: @Html.DisplayFor(item => i.datedue)</span>
                    </div>
                </p>
            </div>
         
    </fieldset>
    <hr/>
}
       

