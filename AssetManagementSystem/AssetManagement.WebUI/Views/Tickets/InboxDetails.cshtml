@model AssetManagement.Domain.Entities.ContactUs

@{
    ViewBag.Title = "InboxDetails";
    Layout = "~/Views/Shared/_assetsms.cshtml";
}
<style>
    fieldset {
        padding-right: 20%;
        width: 100%;
        border: 2px 2px solid #000;
    }

    .link {
        text-decoration: none;
    }

    .tabs {
        padding-top: 2%;
    }

        .tabs span {
            display: inline-block;
            padding-right: 4px;
        }

    strong span {
        display: inline-block;
        padding-right: 6px;
    }

    .linespace strong {
        padding-right: 10px;
    }

    .col-md-10 {
        font-size: 1.1em;
    }
</style>
<div style="margin-bottom:10%;"></div>

<h2>Inbox Details</h2>

<div class="col-md-10">
    <h3>
        <strong>
            <span>@Model.userName</span>
        </strong>
    </h3>
</div>
<fieldset>
    <legend></legend>
    <div class="col-md-10 linespace">
        <h4><strong>@Model.subject</strong></h4>
    </div>
    <br /><br />
    <div class="col-md-10">
        <p>
            @Model.body
            <div class="tabs">
                <span>@Html.ActionLink("Create New Ticket", "Create", "Tickets", new { @class = "btn btn-sm btn-default" })</span>
                <span>Sent: @Model.datesent</span>
            </div>
        </p>
    </div>
</fieldset>
