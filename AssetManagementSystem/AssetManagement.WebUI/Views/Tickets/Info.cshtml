@model AssetManagement.Domain.Entities.Ticket

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_assetsms.cshtml";
}
<style>
    fieldset {
        padding-right: 20%;
        width: 1024px;
        border: 2px 2px solid #000;
    }
    .solution {
        margin-left: 100px;
        width: 700px;
    }
    .problem {
        width: 700px;
    }
    .link {
        text-decoration: none;
    }

    .tabs {
        padding-top: 2%;
    }

        .tabs span {
            display: inline-block;
            padding-right: 4px;
        }

    strong span {
        display: inline-block;
        padding-right: 6px;
    }

    .linespace strong {
        padding-right: 10px;
    }

    .col-md-10 {
        font-size: 1em;
    }
    .alert {
        border-radius: 4px;
    }
    /*.success{
        background-color: #93ff87;
        color: #191919;
    }*/
</style>
<div style="margin-bottom:8%;"></div>

<h2>Solution</h2>

@if (@TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

<div class="col-md-10">
    <h3>
        <strong>
           <span>@Model.subject</span>
           <span><img src="~/Content/check.png" width="20" height="20" title="Completed" /></span>
        </strong>
    </h3>
</div>
<fieldset>
    <legend></legend>
    <div class="col-md-10 linespace">
        <strong>Asset Number    : </strong>@Model.assetnumber
        <br /><br />
    </div>
    <div class="col-md-10">
        <div class="problem">
            @*<h4 class="alert alert-danger">Problem</h4>*@
            <p class="alert alert-danger">
                <label><b>PROBLEM</b>   - @Model.description</label>
                @*@Html.DisplayFor(model => "PROBLEM  :" + model.description)*@
            </p>
        </div>

        <div class="solution">
            @*<h4 class="alert alert-info">Solution</h4>*@
            <p class="alert alert-info">
                <label><b>SOLUTION</b>   - @Model.solution</label>
                @*@Html.DisplayFor(model => "SOLUTION  :" + model.solution)*@
            </p>
        </div>
    </div>
</fieldset>
