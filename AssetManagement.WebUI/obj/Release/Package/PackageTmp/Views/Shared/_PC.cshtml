
@model AssetManagement.Domain.Entities.PCBox
<style>
    #table-wrapper {
        position: relative;
    }

    #table-scroll {
        height: 200px;
        overflow: auto;
    }

    #table-wrapper table {
        width: 100%;
    }

        #table-wrapper table thead th .text {
            position: absolute;
            top: -20px;
            z-index: 2;
            height: 20px;
        }

    #headerdiv {
        padding-right: 20px;
    }
</style>
<table class="table table-striped table-condensed table-bordered">
    <thead>
        <tr>
            <th style="width:20%">Properties</th>
            <th>Description</th>
        </tr>
    </thead>
</table>
<table class="table table-striped table-condensed table-bordered" id="table-scroll">
    <tbody>
        <tr>
            <td style="width:20%">Asset #</td>
            <td>@Model.assetNumber</td>
        </tr>
        <tr>
            <td style="width:20%">Manufacturer</td>
            <td>@Model.manufacturer</td>
        </tr>
        <tr>
            <td style="width:20%">Model</td>
            <td>@Model.modelName</td>
        </tr>
        <tr>
            <td style="width:20%">Serial Number</td>
            <td>@Model.serialNumber</td>
        </tr>
        <tr>
            <td style="width:20%">Operating System</td>
            <td>@Model.OS</td>
        </tr>
        <tr>
            <td style="width:20%">Memory</td>
            <td>@Model.RAM</td>
        </tr>
        <tr>
            <td style="width:20%">Hard Drive Capacity</td>
            <td>@Model.HDD</td>
        </tr>
        @if (User.IsInRole("Asset-Manager"))
        {
            <tr>
                <td style="width:20%"> Assign Date</td>
                <td>@Model.assigndate</td>
            </tr>
        }
        <tr>
            <td style="width:20%"> Warranty Status</td>
            <td></td>
        </tr>
        <tr>
            <td style="width:20%">Repair History</td>
            <td></td>
        </tr>
        @if (User.IsInRole("Administrator"))
        {
            <tr>
                <td style="width:20%">Invoice</td>
                <td>@Model.InvoiceNumber</td>
            </tr>
            <tr>
                <td style="width:20%"> Assign Date</td>
                <td>@Model.Asset.costprice</td>
            </tr>
        }
    </tbody>
</table>


