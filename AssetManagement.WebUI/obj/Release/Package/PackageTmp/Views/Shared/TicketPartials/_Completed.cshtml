@model IEnumerable<AssetManagement.Domain.Entities.Ticket>

@{
    //Layout = "~/Views/Shared/_helpd.cshtml";
    Layout = null;
}
<style>
    #table-wrapper {
        position: relative;
    }

    #table-scroll-completed {
        height: 200px;
        overflow: auto;
    }

    #table-wrapper table {
        width: 100%;
    }

        #table-wrapper table thead th .text {
            position: absolute;
            top: -20px;
            z-index: 2;
            height: 20px;
        }

    #HeaderDivCompleted {
        padding-right: 20px;
    }
</style>
<div id="table-wrapper">
    <div id="HeaderDivCompleted">
        <table class="table table-striped table-condensed table-bordered" id="headerTable" style="margin-bottom:0px">
            <thead>
                <tr>
                    <th style="width:10%">
                        @Html.DisplayName("Ticket No")
                    </th>
                    <th style="width:10%">
                        @Html.DisplayName("Asset No")
                    </th>
                    <th style="width:10%">
                        @Html.DisplayName("Employee")
                    </th>
                    <th style="width:18%">
                        @Html.DisplayNameFor(model => model.subject)
                    </th>
                    <th style="width:10%">
                        @Html.DisplayNameFor(model => model.priority)
                    </th>
                    <th>
                        @Html.DisplayName("Date Created")
                    </th>
                    <th>
                        @Html.DisplayName("Date Due")
                    </th>
                    <th style="width:10%">Options</th>
                </tr>
            </thead>
        </table>
    </div>
    <div id="table-scroll-completed">
        <table class="table table-striped table-condensed table-bordered" id="tableCompleted">
            <tbody>
                @foreach (var item in Model)
            {
                    <tr>
                        <td style="width:10%">
                            @Html.DisplayFor(modelItem => item.ticketid)
                        </td>
                        <td style="width:10%">
                            @if (item.assetnumber != null)
                {
                                @Html.DisplayFor(modelItem => item.assetnumber)
                            }
                            else
                            {
                                <text>N/A</text>
                            }
                        </td>
                        <td style="width:10%">
                            @Html.DisplayFor(modelItem => item.assetowner)
                        </td>
                        <td style="width:18%">
                            @Html.DisplayFor(modelItem => item.subject)
                        </td>
                        <td style="width:10%">
                            @Html.DisplayFor(modelItem => item.priority)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.datecreated)
                        </td>
                        <td>
                            @item.datedue.ToShortDateString()
                        </td>
                        <td style="padding:0px;width:10%">
                            @Html.ActionLink("View", "Ticket", ViewBag.ControllerName as string, new { id = item.ticketid }, null)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<script>

</script>