@*@model IEnumerable<AssetManagement.Domain.Entities.Ticket>*@
@model AssetManagement.Business.HelpDeskSystem.HelpDeskLogic
@using PagedList.Mvc
@using PagedList
@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_TechnicianLayout.cshtml";
}
<style>
    body {
        font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
    }
</style>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
<script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
<div style="margin-bottom:10%;"></div>
<h3 id="technician">Tickets</h3>
<ol class="breadcrumb" id="nav_map">
    <li><i class="fa fa-home"></i>@Html.ActionLink("Home", "Dashboard", "Dashboard")</li>
    <li><i class="fa fa-file-text-o"></i><a href="/Report/Index">Report</a></li>
    <li><i class="fa fa-gear"></i>Tickets</li>
</ol>

<div class="box box-primary" id="tabs">
    <div class="box-body">
        <ul class="nav nav-tabs">
            <li class="active"><a data-toggle="tab" href="#home">Opened</a></li>
            <li><a data-toggle="tab" href="#menu1">Unaknowlaged</a></li>
            <li><a data-toggle="tab" href="#menu2">Completed</a></li>
            <li><a data-toggle="tab" href="#menu3">All</a></li>
        </ul>
        <div class="tab-content">
            <div id="home" class="tab-pane fade in active">
                @Html.Partial("/Views/Tickets/_OpenedTickets.cshtml", Model.OpenTickets(Model.GetEmployee(ViewData["id"].ToString())))
            </div>
            <div id="menu1" class="tab-pane fade">
                @Html.Partial("/Views/Tickets/_UnAknowlaged.cshtml", Model.UnAknowlagedTickets(Model.GetEmployee(ViewData["id"].ToString())))
            </div>
            <div id="menu2" class="tab-pane fade">
                @Html.Partial("/Views/Tickets/_Completed.cshtml", Model.ClosedTickets(Model.GetEmployee(ViewData["id"].ToString())))
            </div>
            <div id="menu3" class="tab-pane fade">
                @Html.Partial("/Views/Tickets/_AllTickets.cshtml", Model.AllTickets(Model.GetEmployee(ViewData["id"].ToString())))
            </div>
        </div>
    </div>
</div>
