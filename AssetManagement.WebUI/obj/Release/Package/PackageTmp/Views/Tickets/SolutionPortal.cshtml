@model IEnumerable<AssetManagement.Domain.Entities.Ticket>

@{
    ViewBag.Title = "Solution";
    Layout = "~/Views/Shared/_helpd.cshtml";

}
<style>
    fieldset {
        width: 90%;
        border-bottom: 1px solid #b7b7b7;
        margin-bottom: 15px;
    }

    .link {
        text-decoration: none;
    }

    .tabs {
        padding-top: 2%;
        margin-left: 40%;
    }

        .tabs span {
            display: inline-block;
            padding-right: 4px;
        }

    strong span {
        display: inline-block;
        padding-right: 6px;
    }
</style>
<div style="margin-bottom:10%;"></div>
<h3 class="page-header">
    <i class="fa fa-info" ></i>
    Knowledge Base
</h3>
<div class="form-horizontal" style="width:90%">
    <ol class="breadcrumb">
        <li><i class="fa fa-gears"></i><a href="#">Knowledge Base</a></li>
    </ol>
</div>
@using (Html.BeginForm("SolutionPortal", "Tickets", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <div class="col-lg-7">
        <span><input type="search" name="search" placeholder="Enter keyword" /> <input type="submit" class="btn btn-default" value="Search" /></span>
    </div>
      

    @*<div class="col-md-8">
        Category: @Html.DropDownList("Category") &nbsp;&nbsp;&nbsp;&nbsp;
        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Keyword: @Html.TextBox("search")   
    </div>
    <span class="col-lg-4"><input type="submit" value="search" /></span>*@



}

@foreach (var i in Model)
{

    <div class="col-md-10">

        <h3>
            <strong>
                <span> @Html.ActionLink(i.subject, "Info", "Tickets", new { id = i.ticketid }, new { @class = "link" })</span>
                <span><img src="~/Content/check.png" width="20" height="20" title="Completed" /></span>
            </strong>
        </h3>
    </div>
        <fieldset>
            <div class="col-md-10">
                <p>
                    @Html.DisplayFor(item => i.description)
                    <span><b>Solved by : @i.Employees.fullname</b></span>
                    <div class="tabs">
                        <span>Created: @Html.DisplayFor(item => i.datecreated) | </span>
                        @*<span>Due: @Html.DisplayFor(item => i.datedue) | </span>*@
                        <span>Completed: @Html.DisplayFor(item => i.datecompleted)</span>
                    </div>
                </p>
            </div>
        </fieldset>
}
