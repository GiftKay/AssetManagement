@model IEnumerable<AssetManagement.Domain.Entities.ReplacementPart>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_assetsms.cshtml";
}
<h2>Replacement Parts</h2>
<hr />
<h3 class="page-header">
    <i class="icon_tools"></i>
    Replacement Parts
</h3>
<ol class="breadcrumb">
    <li><i class="fa fa-home"></i>@Html.ActionLink("Home", "Dashboard", "Dashboard")</li>
    <li><i class="fa fa-desktop"></i>Stock</li>
    <li><i class="icon_tools"></i>Replacement Parts</li>
</ol>
<p>
    @Html.ActionLink("Add New Part", "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table table-striped table-condensed table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AssociatedtedAsset)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AssociatedTicket)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InvoiceNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Supplier)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PartNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PurchaseDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AssociatedtedAsset)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AssociatedTicket)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.InvoiceNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Supplier)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PurchaseDate)
        </td>
        <td>
            @Html.ActionLink("Modify", "Edit", new { id=item.ReplacementID }) |
            @Html.ActionLink("View", "Details", new { id=item.ReplacementID }) |
            @Html.ActionLink("Remove", "Delete", new { id=item.ReplacementID })
        </td>
    </tr>
}

</table>
