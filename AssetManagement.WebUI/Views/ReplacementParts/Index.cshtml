@model IEnumerable<AssetManagement.Domain.Entities.ReplacementPart>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_assetsms.cshtml";
}
<h2>Replacement Parts</h2>
<hr />
<h3 class="page-header">
    <i class="icon_tools"></i>
    Replacement Parts
</h3>
<ol class="breadcrumb">
    <li><i class="fa fa-home"></i>@Html.ActionLink("Home", "Dashboard", "Dashboard")</li>
    <li><i class="fa fa-desktop"></i>Stock</li>
    <li><i class="icon_tools"></i>Replacement Parts</li>
</ol>
<p>
    @Html.ActionLink("Add New Part", "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table table-striped table-condensed table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.associatedAsset)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.associatedTicket)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.invoiceNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.supplier)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.partNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.pruchaseDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.associatedAsset)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.associatedTicket)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.invoiceNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.supplier)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.partNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.pruchaseDate)
        </td>
        <td>
            @Html.ActionLink("Modify", "Edit", new { id=item.replacementPartID }) |
            @Html.ActionLink("View", "Details", new { id=item.replacementPartID }) |
            @Html.ActionLink("Remove", "Delete", new { id=item.replacementPartID })
        </td>
    </tr>
}

</table>
