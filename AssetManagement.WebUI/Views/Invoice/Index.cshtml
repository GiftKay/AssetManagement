@model PagedList.IPagedList<AssetManagement.Domain.Entities.Invoice>
@using PagedList.Mvc
@using PagedList

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_assetsms.cshtml";
}
<h2>Suppliers</h2>
<hr />
<h3 class="page-header">
    <i class="fa fa-file-text"></i>
    Suppliers
</h3>

<ol class="breadcrumb">
    <li><i class="fa fa-home"></i><a href="#">Home</a></li>
    <li><i class="fa fa-desktop"></i>Stock</li>
    <li><i class="fa fa-list-alt"></i>Invoices</li>
</ol>

<p>
    @Html.ActionLink("Add Invoice", "Create", null, new { @class = "btn btn-default" })
</p>

<table class="table table-striped table-condensed table-bordered">
    <tr>
        <th>
            @Html.DisplayName("Invoice Number")
        </th>
        <th>
            <p>Supplier</p>
        </th>
        <th>
            @Html.DisplayName("Invoice Date")
        </th>
        <th>
           
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.InvoiceNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Retailer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InvoiceDate)
            </td>
            <td>
                @Html.ActionLink("View", "ViewInvoice", new { id = item.InvoiceId })
            </td>
        </tr>
    }

</table>

<br />
<div style="text-align: center">
    <p>
        @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
    </p>
    <p style="margin-top: -25px">
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
    </p>
</div>
