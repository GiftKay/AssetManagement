@model PagedList.IPagedList<AssetManagement.Domain.Entities.Asset>
@using PagedList.Mvc
@using PagedList
@{
    ViewBag.Title = "EmployeeAssets";
    Layout = "~/Views/Shared/_assetsms.cshtml";
}
<h2>EmployeeAssets</h2>

<div style="margin-bottom:5%;"></div>

<h3 class="page-header"><i class="fa fa-list-alt"></i>@ViewBag.EmployeeName's Assets</h3>
<ol class="breadcrumb">
    <li><i class="fa fa-home"></i>@Html.ActionLink("Home","Dashboard","Dashboard")</li>
    <li><i class="icon_profile"></i>@Html.ActionLink("Employees","Index","Employee")</li>
    <li><i class="fa fa-list-alt"></i>Assets</li>
</ol>

<table class="table table-striped table-condensed table-bordered">
    <tr>
        <th>
            <text>Invoice</text>
        </th>
        <th>
            @Html.DisplayName("Asset Number")
        </th>
        <th>
            @Html.DisplayName("Serial Number")
        </th>
        <th>
            @Html.DisplayName("Catergory")
        </th>
        <th>
            @Html.DisplayName("Manufacturer")
        </th>
        <th>
            @Html.DisplayName("Warranty")
        </th>
        <th>
            @Html.DisplayName("Date Added")
        </th>
        <th>
            @Html.DisplayName("Assign Date")
        </th>
    </tr>
@foreach (var item in Model) {
    <tr>
        <td> 
            @{
                @Html.ActionLink(item.InvoiceNumber.ToString(),"ViewByInvoiceNumber", "Invoice", new { id = item.InvoiceNumber }, null);
            }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.assetNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.serialNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.catergory)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.manufacturer)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.warranty)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.dateadded)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.assigndate)
        </td>
    </tr>
}

</table>

<br />
<div style="text-align: center">
    <p>
        @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
    </p>
    <p style="margin-top: -25px">
        @Html.PagedListPager(Model, page => Url.Action("EmployeeAssets", new { page }))
    </p>
</div>
