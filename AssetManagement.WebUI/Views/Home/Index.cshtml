
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_home.cshtml";
}
<div style="margin-bottom:12%;"></div>

<div>
    <center>
        <h1>Welcome to Asset Management</h1>
        <div>
            @{
                if (User.Identity.IsAuthenticated)
                {
                    <h4>You're logged in as: @User.Identity.Name</h4>
                }
                else
                {
                    @Html.ActionLink("Login", "Login", "Account", new { @class = "btn btn-default" })
                
                }
            }
        </div>
    </center>
</div>

